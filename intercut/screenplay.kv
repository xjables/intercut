#:import Scene scene

# elements are implemented in elements.py


<Screenplay>:
    cols: 1
    touch_multiselect: True
    multiselect: True
    size_hint_y: None
    height: self.minimum_height
    size_hint_x: None
    width: "8.5in"
    canvas.before:
        Color:
            rgba: [1, 1, 1, 1]
        Rectangle:
            size: self.size
            pos: self.pos
    Scene:
        SceneHeading:
            size_hint_y: None
            text_size: self.width, None
        Action:
            text: str(root.width)


<ScrollingScreenplay>:
    bar_width: 15
    bar_color: [.427, .031, .686, 1]
    bar_inactive_color: self.bar_color[:3] + [.2]
    scroll_type: ['bars']
    # scroll_timeout being 0 prevents touch scrolling and sends touch controls
    # directly to the children
    scroll_timeout: 0

    Screenplay:
