#:import Scene elements
#:import Action elements

# elements are implemented in elements.py


<Screenplay>:
    cols: 1
    touch_multiselect: True
    multiselect: True
    size_hint_y: None
    height: self.minimum_height
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    Scene:
        size_hint_y: None
        text_size: self.width, None
        font_size: 25
    Character:
        size_hint_y: None
        text_size: self.width, None
        font_size: 25
